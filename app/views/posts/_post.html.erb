<div class="post" id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>
  <p>
    <strong>Published:</strong>
    <%= post.published %>
  </p>
  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>
  <% if post.header_image.present? %>
    <div class="post__image" style="background-image: url(<%= url_for(post.header_image) %>);">
    </div>
  <% end %>
</div>
