<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<ul class="list" id="posts">
  <% @posts.each do |post| %>
    <li class="list__item">
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
      <hr>
    </li>
  <% end %>
</ul>

<%= link_to "New post", new_post_path %>
