<header class="header">
  <nav class="nav">
    <ul class="list list--row">
      <li class="list__item">
        <%= link_to 'Posts', posts_path, class: current_controller?('posts') ? 'link link--active' : '' %>
      </li>
      <li class="list__item">
        <%= link_to 'Home', home_path, class: current_controller?('welcome') ? 'link link--active' : '' %>
      </li>
    </ul>
  </nav>
  <div>
    <%= link_to 'dark', set_theme_path(theme: 'dark'), class: cookies[:theme] == 'dark' ? 'link link--active' : '' %>
    <%= link_to 'light', set_theme_path(theme: 'light'), class: cookies[:theme] == 'light' ? 'link link--active' : '' %>
  </div>
</header>